# Container Mode Configuration Example
# Copy this file to .env to enable container mode

# Enable container isolation mode
# When true, each user gets their own container for sessions
CONTAINER_MODE=true

# Container runtime to use (docker or podman)
# Default: docker
CONTAINER_RUNTIME=docker

# Base image for user containers
# Should include development tools like git, vim, etc.
# Default: ubuntu:22.04
# CONTAINER_IMAGE=ubuntu:22.04

# Resource limits per user container
# Memory limit (e.g., 2g, 512m)
CONTAINER_MEMORY_LIMIT=2g

# CPU limit (number of CPUs)
CONTAINER_CPU_LIMIT=1

# Other standard configuration
JWT_SECRET=your-secret-key-change-in-production
DATABASE_URL=postgresql://user:password@localhost/claude_web

# Frontend URL
FRONTEND_URL=http://localhost:12020

# Log level
LOG_LEVEL=info