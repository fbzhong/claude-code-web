# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/claude_web

# JWT Configuration
JWT_SECRET=your-secret-key-here

# Server Configuration
PORT=12021
NODE_ENV=development

# Container Configuration
CONTAINER_MODE=false
CONTAINER_HOST=unix:///var/run/docker.sock
CONTAINER_IMAGE=claude-web-dev:latest

# Session Buffer Configuration
# Maximum number of output chunks to keep in memory per session
MAX_OUTPUT_BUFFER=5000

# Maximum output buffer size in MB per session
MAX_OUTPUT_BUFFER_MB=5

# Number of chunks to send when reconnecting to a session
RECONNECT_HISTORY_SIZE=500

# SSHpiper Configuration (for VS Code Remote-SSH)
SSHPIPER_WORKINGDIR=/var/sshpiper

# GitHub OAuth Configuration (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:12021/api/auth/github/callback

# Invite Code System (optional)
REQUIRE_INVITE_CODE=false